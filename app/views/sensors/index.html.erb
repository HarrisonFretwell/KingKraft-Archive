<p id="notice"><%= notice %></p>

<h1>Sensors</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">
        Id
      </th>
      <th scope="col">
        Cycles
      </th>
    </tr>
  </thead>

  <tbody>
    <% @sensors.each do |sensor| %>
      <tr>
        <td scope="row">
          <%=sensor.id %>
        </td>
        <td scope="row">
          <%=sensor.cycles %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First</th>
      <th scope="col">Last</th>
      <th scope="col">Handle</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td>Mark</td>
      <td>Otto</td>
      <td>@mdo</td>
    </tr>
    <tr>
      <th scope="row">2</th>
      <td>Jacob</td>
